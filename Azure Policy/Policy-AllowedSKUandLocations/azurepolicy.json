{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "listOfAllowedSKUs": {
            "type": "array",
            "defaultValue": ["B2_ms"]
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "locationpolicy",
            "apiVersion": "2019-06-01",
            "properties": {
                "policyType": "Custom",
                "parameters": {},
                "policyRule": {
                    "if": {
                        "field": "location",
                        "equals": "westeurope"
                    },
                    "then": {
                        "effect": "deny"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "name": "Allowed virtual machine SKUs",
            "apiVersion": "2019-06-01",
            "properties": {
                "policyType": "Custom",
                "parameters": {},
                "policyDefinitions": [
                    {
                        "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/cccc23c7-8427-4f53-ad12-b6a63eb452b3",
                        "parameters": {
                            "listOfAllowedSKUs": {
                            "value": "[parameters('listOfAllowedSKUs')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "location-and-VM-SKU-lock",
            "apiVersion": "2019-06-01",
            "dependsOn": [
                "locationpolicy",
                "Allowed virtual machine SKUs"
            ],
            "properties": {
                "scope": "[subscription().id]",
                "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', 'locationpolicy', resourceId('Microsoft.Authorization/policySetDefinitions', 'Allowed virtual machine SKUs'))]"
            }
        }
    ]
}